{
  "name": "multisigwallet-cli",
  "version": "0.0.1",
  "main": "msig.js",
  "license": "MIT",
  "scripts": {
    "prepare": "yarn build && ./scripts/prepare.sh",
    "build": "npx tsc && yarn chmod && yarn symlink",
    "chmod": "chmod u+x ./bin/src/msig.js && chmod u+x ./scripts/prepare.sh",
    "symlink": "cp bin/src/msig.js node_modules/.bin/msig",
    "genesis": "./scripts/generate_genesis.py",
    "init-geth": "geth --datadir blockchain init genesis/genesis.json",
    "run-geth": "geth --datadir blockchain --dev --http --mine --miner.threads 1"
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@typechain/hardhat": "^3.0.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.12",
    "commander": "^8.3.0",
    "dotenv": "^16.0.0",
    "ethers": "^5.5.2",
    "hardhat": "2.6.1",
    "ts-node": "^10.4.0",
    "typechain": "^6.0.5",
    "typescript": "^4.5.2"
  }
}
